@model TechShop.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row m-0">
    <div class="page-header float-left">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li><a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh sách danh mục</a></li>
                <li class="active">Chỉnh sửa danh mục</li>
            </ol>
        </div>
    </div>
</div>
<strong class="card-title">Chỉnh sửa danh mục</strong>
<div class="card">
    <div class="card-body card-block">
        <form asp-action="Edit" asp-controller="AdminCategories" asp-route-id="@Model.CatId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatId" />
            <div class="form-group"><label asp-for="CatName" class="form-control-label"></label><input asp-for="CatName" class="form-control" /></div>
            <span asp-validation-for="CatName" class="text-danger"></span>
            <div class="form-group form-check"><label class="form-check-label"><input class="form-check-input" asp-for="Published" /> @Html.DisplayNameFor(model => model.Published)</label></div>
            <div class="form-group"><label asp-for="Title" class="form-control-label"></label><input asp-for="Title" class="form-control" /></div>
            <span asp-validation-for="Title" class="text-danger"></span>
            <div class="form-actions form-group"><button type="submit" value="Save" class="btn btn-primary">Lưu thay đổi</button></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

