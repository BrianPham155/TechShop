@model TechShop.Models.Customer

@{
    ViewData["Title"] = "Thêm khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row m-0">
    <div class="page-header float-left">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li><a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">Danh sách khách hàng</a></li>
                <li class="active">Thêm khách hàng</li>
            </ol>
        </div>
    </div>
</div>
<strong class="card-title">Thêm khách hàng</strong>
<div class="card">
    <div class="card-body card-block">
        <form asp-controller="AdminCustomers" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"><label asp-for="FullName" class="form-control-label"></label><input asp-for="FullName" class="form-control" /></div>
            <span asp-validation-for="FullName" class="text-danger"></span>
            <div class="form-group"><label asp-for="Birthday" class="form-control-label"></label><input asp-for="Birthday" class="form-control" /></div>
            <span asp-validation-for="Birthday" class="text-danger"></span>
            <div class="form-group"><label asp-for="Email" class="form-control-label"></label><input asp-for="Email" class="form-control" /></div>
            <span asp-validation-for="Email" class="text-danger"></span>
            <div class="form-group"><label asp-for="Phone" class="form-control-label"></label><input asp-for="Phone" class="form-control" /></div>
            <span asp-validation-for="Phone" class="text-danger"></span>
            <div class="form-group"><label asp-for="Address" class="form-control-label"></label><input asp-for="Address" class="form-control" /></div>
            <span asp-validation-for="Address" class="text-danger"></span>
            <div class="form-group"><label asp-for="District" class="form-control-label"></label><input asp-for="District" class="form-control" /></div>
            <span asp-validation-for="District" class="text-danger"></span>
            <div class="form-group"><label asp-for="Ward" class="form-control-label"></label><input asp-for="Ward" class="form-control" /></div>
            <span asp-validation-for="Ward" class="text-danger"></span>
            <div class="form-group form-check"><label class="form-check-label"><input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)</label></div>
            <div class="form-group"><label asp-for="LastLogin" class="form-control-label"></label><input asp-for="LastLogin" class="form-control" /></div>
            <span asp-validation-for="LastLogin" class="text-danger"></span>
            <div class="form-group"><label asp-for="Password" class="form-control-label"></label><input asp-for="Password" class="form-control" /></div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="form-group"><label asp-for="Salt" class="form-control-label"></label><input asp-for="Salt" class="form-control" /></div>
            <span asp-validation-for="Salt" class="text-danger"></span>
            <div class="form-actions form-group"><button type="submit" value="Save" class="btn btn-primary">Thêm mới</button></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

