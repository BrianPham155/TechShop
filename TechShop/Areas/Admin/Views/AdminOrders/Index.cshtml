@model IEnumerable<TechShop.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<partial name="_Notifycation" />
<div class="row m-0">
    <div class="page-header float-left">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="active">Danh sách đơn hàng</li>
            </ol>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách đơn hàng</strong>
                        <a id="add-new-data" class="btn btn-primary float-right ml-2" asp-area="Admin" asp-controller="AdminOrders" asp-action="Create">Thêm mới</a>
                    </div>

                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Paid)</th>
                                    <th>@Html.DisplayNameFor(model => model.TotalMoney)</th>
                                    <th>@Html.DisplayNameFor(model => model.Customer)</th>
                                    <th>@Html.DisplayNameFor(model => model.TracsactStatus)</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Paid)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TotalMoney)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Customer.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TracsactStatus.TransactStatusId)</td>
                                            <td>
                                                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminOrders" asp-action="Details" asp-route-id="@item.OrderId">Xem</a>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="AdminOrders" asp-action="Edit" asp-route-id="@item.OrderId">Sửa</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="AdminOrders" asp-action="Delete" asp-route-id="@item.OrderId">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
<div class="clearfix"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>
