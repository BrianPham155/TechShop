@model TechShop.Models.Order

@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row m-0">
    <div class="page-header float-left">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li><a asp-area="Admin" asp-controller="AdminOrders" asp-action="Index">Danh sách đơn hàng</a></li>
                <li class="active">Chỉnh sửa đơn hàng</li>
            </ol>
        </div>
    </div>
</div>
<strong class="card-title">Chỉnh sửa đơn hàng</strong>
<div class="card">
    <div class="card-body card-block">
        <form asp-action="Edit" asp-controller="AdminOrders" asp-route-id="@Model.OrderId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group">
                <label asp-for="CustomerId" class="form-control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderDate" class="form-control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShipDate" class="form-control-label"></label>
                <input asp-for="ShipDate" class="form-control" />
                <span asp-validation-for="ShipDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TracsactStatusId" class="form-control-label"></label>
                <select asp-for="TracsactStatusId" class="form-control" asp-items="ViewBag.TracsactStatusId"></select>
                <span asp-validation-for="TracsactStatusId" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deleted" /> @Html.DisplayNameFor(model => model.Deleted)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Paid" /> @Html.DisplayNameFor(model => model.Paid)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="PaymentDate" class="form-control-label"></label>
                <input asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentId" class="form-control-label"></label>
                <input asp-for="PaymentId" class="form-control" />
                <span asp-validation-for="PaymentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalMoney" class="form-control-label"></label>
                <input asp-for="TotalMoney" class="form-control" />
                <span asp-validation-for="TotalMoney" class="text-danger"></span>
            </div>

            <div class="form-actions form-group">
                <button type="submit" value="Save" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
