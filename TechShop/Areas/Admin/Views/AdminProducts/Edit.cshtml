@model TechShop.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row m-0">
    <div class="page-header float-left">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li><a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a></li>
                <li class="active">Chỉnh sửa sản phẩm</li>
            </ol>
        </div>
    </div>
</div>
<strong class="card-title">Chỉnh sửa sản phẩm</strong>
<div class="card">
    <div class="card-body card-block">
        <form asp-action="Edit" asp-controller="AdminProducts" asp-route-id="@Model.ProductId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="Thumb" />
            <div class="form-group"><label asp-for="ProductName" class="form-control-label"></label><input asp-for="ProductName" class="form-control" /></div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
            <div class="form-group"><label asp-for="Description" class="form-control-label"></label><input asp-for="Description" class="form-control" /></div>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-group"><label asp-for="CatId" class="form-control-label"></label><select asp-for="CatId" class="custom-select" asp-items="ViewBag.DanhMuc"></select></div>
            <div class="form-group"><label asp-for="Price" class="form-control-label"></label><input asp-for="Price" class="form-control" /></div>
            <span asp-validation-for="Price" class="text-danger"></span>
            <div class="form-group"><label asp-for="Discount" class="form-control-label"></label><input asp-for="Discount" class="form-control" /></div>
            <span asp-validation-for="Discount" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Thumb" class="control-label"></label>
                <input asp-for="Thumb" name="fThumb" type="file" class="form-control-file" />
                <span asp-validation-for="Thumb" class="text-danger"></span>
            </div>
            <div class="form-group form-check"><label class="form-check-label"><input class="form-check-input" asp-for="BestSellers" /> @Html.DisplayNameFor(model => model.BestSellers)</label></div>
            <div class="form-group form-check"><label class="form-check-label"><input class="form-check-input" asp-for="HomeFlag" /> @Html.DisplayNameFor(model => model.HomeFlag)</label></div>
            <div class="form-group form-check"><label class="form-check-label"><input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)</label></div>
            <div class="form-group"><label asp-for="Tags" class="form-control-label"></label><input asp-for="Tags" class="form-control" /></div>
            <span asp-validation-for="Tags" class="text-danger"></span>
            <div class="form-group"><label asp-for="Title" class="form-control-label"></label><input asp-for="Title" class="form-control" /></div>
            <span asp-validation-for="Title" class="text-danger"></span>
            <div class="form-group"><label asp-for="UnitsInStock" class="form-control-label"></label><input asp-for="UnitsInStock" class="form-control" /></div>
            <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            <div class="form-actions form-group"><button type="submit" value="Save" class="btn btn-primary">Lưu thay đổi</button></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

