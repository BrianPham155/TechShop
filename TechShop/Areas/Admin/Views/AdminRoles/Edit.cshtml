@model TechShop.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row m-0">
    <div class="page-header float-left">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a></li>
                <li class="active">Chỉnh sửa quyền truy cập</li>
            </ol>
        </div>
    </div>
</div>

<strong class="card-title">Chỉnh sửa quyền truy cập</strong>
<div class="card">
    <div class="card-body card-block">
        <form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <div class="form-group"><label class=" form-control-label">Tên quyền truy cập</label><input type="text" class="form-control" asp-for="RoleName" placeholder="Tên quyền truy cập"></div>
            <div class="form-group"><label class=" form-control-label" asp-for="Description">Mô tả</label><input type="text" class="form-control" asp-for="Description" placeholder="Mô Tả"></div>
            <div class="form-actions form-group"><button type="submit" class="btn btn-success btn-sm">Lưu thay đổi</button></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
